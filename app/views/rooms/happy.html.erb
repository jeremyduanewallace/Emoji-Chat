<style>
body{
  background-color: yellow !important;
}
div[class^="bubble-"] {
  background-image: url('https://cdn.shopify.com/s/files/1/1061/1924/products/Smiling_Emoji_with_Smiling_Eyes_large.png?v=1458743621') !important;
  background-size: 100% !important;
}
</style>
<%= stylesheet_link_tag 'style.css' %>
<%= audio_tag "beepone.mp3", class: "audio-play" %>

<div class="jelly-container">
  <div class="bubble-1"></div>
  <div class="bubble-2"></div>
  <div class="bubble-3"></div>
  <div class="bubble-4"></div>
  <div class="bubble-5"></div>
  <div class="bubble-6"></div>
  <div class="bubble-7"></div>
  <div class="bubble-8"></div>
  <div class="bubble-9"></div>
  <div class="bubble-10"></div>
  <div class="bubble-11"></div>
  <div class="bubble-12"></div>
  <div class="bubble-13"></div>
  <div class="bubble-14"></div>
  <div class="bubble-15"></div>
  <div class="bubble-16"></div>
  <div class="bubble-17"></div>
  <div class="bubble-18"></div>
  <div class="bubble-19"></div>
  <div class="bubble-20"></div>
  <div class="showPage">
    <h1 class="text-center">Happy Chat</h1>
    <div id="chatbox" class="pre-scrollable chatbox">
      <div id="messages">
        <%= @messages %>
      </div>
</div>

<div id="chat-input-div" class="emoji-picker-container text-center">
  <%= text_field_tag "chat-input", nil, class: "text-left form-control", placeholder: "Say something ...", data: {emojiable: true, behavior: "room_speaker"} %>
</div>